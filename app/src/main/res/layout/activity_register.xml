<?xml version="1.0" encoding="utf-8"?><!-- calling when register button is clicked from loginregister -->

<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coordinatorLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:baselineAligned="false"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingRight="0dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@mipmap/background"/>


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:baselineAligned="false"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingRight="0dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="51dp"
            android:background="@drawable/rectanglesmallcorner"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="30dp"
            android:weightSum="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="User"
                android:id="@+id/radio0"
                android:gravity="center"
                android:background="#FFFFFF"
                android:textColor="#616161"

                android:layout_weight="0.5" />
            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="#212121"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="Agent"
                android:id="@+id/radio1"
                android:gravity="center"
                android:background="#FFFFFF"
                android:textColor="#616161"
                android:layout_weight="0.5"/>

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="@color/white" />


        </LinearLayout>


        <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            >

            <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:id="@+id/MainLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:background="@drawable/rectanglesmallcorner">


            <EditText
                android:id="@+id/nameRegister"

                android:padding="10dp"

                android:textColor="#9E9E9E"
                android:textColorHint="#9E9E9E"
                android:inputType="text"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/rectanglewithoutcorners"
                android:hint="Name"

                android:singleLine="false" />

            <View
                android:id="@+id/asad12asda"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_gravity="start"
                android:background="#E0E0E0"



                />


            <EditText
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/hint_email"
                android:padding="10dp"
                android:singleLine="true"
                android:textColor="#9E9E9E"
                android:textColorHint="#9E9E9E"
                android:background="@drawable/rectanglesmallcorner"
                android:inputType="textEmailAddress" />
            <View


                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_gravity="start"
                android:background="#E0E0E0"
                android:layout_below="@+id/Company_name"


                />

            <EditText
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Password"
                android:inputType="textPassword"
                android:padding="10dp"
                android:singleLine="true"
                android:textColor="#9E9E9E"
                android:textColorHint="#9E9E9E"
                android:background="@drawable/rectanglesmallcorner"/>
            <View

                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_gravity="start"
                android:background="#E0E0E0"
                android:layout_below="@+id/Company_name"


                />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"

               >

                <com.hbb20.CountryCodePicker
                    android:id="@+id/ccp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:defaultNameCode="PK"
                    android:layout_marginTop="5dp"
                    app:contentColor="#9E9E9E"/>


                <View
                   android:layout_alignRight="@+id/ccp"
                    android:layout_width="0.5dp"
                    android:layout_height="45dp"
                    android:id="@+id/view" />


                <EditText
                    android:id="@+id/mobile"
                    android:layout_height="50dp"
                    android:layout_width="match_parent"
                    android:layout_toRightOf="@+id/ccp"
                    android:hint="Number"
                    android:inputType="number"
                    android:singleLine="true"
                    android:textColor="#9E9E9E"
                    android:textColorHint="#9E9E9E"

                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:paddingLeft="5dp"
                    android:background="@drawable/rectanglesmallcorner"
                    android:layout_alignBottom="@+id/view" />


            </RelativeLayout>


                <View

                    android:layout_marginTop="5dp"
                    android:id="@+id/asad12weq"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/Company_name"
                    android:layout_gravity="start"
                    android:background="#E0E0E0"


                    />


                    <EditText
                        android:id="@+id/Company_name"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@drawable/rectanglewithoutcorners"
                        android:hint="Company Name"
                        android:paddingLeft="10dp"
                        android:singleLine="false" />

                    <View

                        android:id="@+id/asad"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@+id/Company_name"
                        android:layout_gravity="start"
                        android:background="#E0E0E0"


                        />

                    <EditText
                        android:id="@+id/Company_detail"
                        android:layout_width="fill_parent"
                        android:layout_height="50dp"
                        android:layout_below="@+id/asad"
                        android:background="@drawable/rectanglewithoutcorners"
                        android:hint="Write About your Company"
                        android:inputType="textMultiLine"
                        android:paddingLeft="10dp"
                        android:maxLines="1"

                        />

                    <View
                        android:id="@+id/asad1"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@+id/Company_detail"
                        android:layout_gravity="start"
                        android:background="#E0E0E0"


                        />

                    <EditText
                        android:id="@+id/Company_address"
                        android:layout_width="fill_parent"
                        android:layout_height="50dp"
                        android:layout_below="@+id/asad1"
                        android:background="@drawable/rectanglewithoutcorners"
                        android:hint="Company Address"
                        android:inputType="textMultiLine"
                        android:paddingLeft="10dp"
                        android:maxLines="1"
                       />

                    <View
                        android:id="@+id/asad12"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@+id/Company_address"
                        android:layout_gravity="start"
                        android:layout_marginTop="5dp"
                        android:background="#E0E0E0"

                        />


                    <AutoCompleteTextView
                        android:id="@+id/city"
                        android:layout_width="fill_parent"
                        android:layout_height="50dp"
                        android:layout_below="@+id/asad12"
                        android:background="@drawable/rectanglewithoutcorners"
                        android:ems="10"
                        android:hint="City"
                        android:paddingLeft="10dp"
                        android:inputType="text"
                        >

                        <requestFocus />
                    </AutoCompleteTextView>

                    <View


                        android:id="@+id/asad123asd"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@+id/city"
                        android:layout_gravity="start"
                        android:background="#E0E0E0"

                        />
                <Button
                    android:id="@+id/LogoButton"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:text="Logo"/>

                <View


                    android:id="@+id/asad123"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/city"
                    android:layout_gravity="start"
                    android:background="#E0E0E0"

                    />

                <ImageView
                    android:id="@+id/Logo"
                    android:layout_width="match_parent"
                    android:layout_height="200dp" />
                <View

                    android:id="@+id/asad1231"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/city"
                    android:layout_gravity="start"
                    android:background="#E0E0E0"

                    />



